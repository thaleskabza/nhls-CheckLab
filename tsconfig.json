{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".", 
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["apps/packages/ui/*"],
      "@core/*": ["apps/packages/core/*"],
      "@infra/*": ["apps/packages/infra/*"],
      "@api/*": ["apps/packages/api/*"],
      "@config/*": ["apps/packages/config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "types"
  ],
  "exclude": ["node_modules"]
}
