{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./app/*"],
      "@infra/*": ["../packages/infra/*"],
      "@core/*": ["../packages/core/*"],
      "@api/*": ["../packages/api/*"],
      "@config/*": ["../packages/config/*"],
      "@ui/*": ["../packages/ui/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}